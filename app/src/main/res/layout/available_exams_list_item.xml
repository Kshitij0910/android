<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingLeft="10dp" android:paddingRight="10dp"
              android:paddingBottom="0dp" android:paddingTop="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/text_color"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:textSize="@dimen/text_size_large"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TNPG Anatomy"
        android:layout_marginBottom="@dimen/margin_normal"
        android:id="@+id/exam_title"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical" android:layout_width="wrap_content" android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/exam_date"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19th Dec 2015 to 31 Jan 2015"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_small"
            />
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:id="@+id/number_of_questions"
                android:text="200"
                android:textColor="@color/text_color"
                android:layout_gravity="bottom"/>
            <TextView
                android:id="@+id/questionsText"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:text="questions"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/margin_normal"
                      android:paddingTop="5dp"
                      android:gravity="start">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/margin_normal"
                android:text="Course"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:id="@+id/course_category"
                android:text="TNPG"
                android:textColor="@color/text_color"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exam_duration"
            android:layout_marginTop="5dp"
            android:text="0:30:00"
            android:textSize="@dimen/text_size_large"
            android:textAlignment="textEnd"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="end" />
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal" android:layout_width="match_parent" android:layout_marginTop="10dp"
                    android:paddingBottom="20dp" android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

        <Button
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:text="@string/email_mcqs"
            android:id="@+id/email_mcqs"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:drawableLeft="@drawable/ic_email_white_18dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/primary_button"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:drawablePadding="3dp"
            android:layout_toLeftOf="@+id/start_exam"/>

        <Button
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:text="@string/start_exam"
            android:visibility="visible"
            android:id="@+id/start_exam"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:drawableLeft="@drawable/ic_assignment_white_18dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/primary_button"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="15dp"
            android:drawablePadding="3dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#c0c0c0"/>
</LinearLayout>