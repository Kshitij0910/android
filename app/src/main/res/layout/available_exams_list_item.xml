<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="0.7" android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="bottom"
            android:textSize="@dimen/text_size_large"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="@dimen/margin_normal"
            android:id="@+id/exam_title"/>

        <TextView
            android:id="@+id/exam_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/text_size_small"
            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="0.3" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="bottom"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:id="@+id/number_of_questions"
                android:layout_gravity="end"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:text="questions"
                android:layout_height="34dp"
                android:textSize="@dimen/text_size_small"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="bottom"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exam_duration"
            android:textSize="@dimen/text_size_large"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:layout_gravity="end"/>
    </LinearLayout>
</LinearLayout>