<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="horizontal" android:paddingLeft="20dp"
              android:paddingRight="20dp" android:paddingBottom="20dp" android:paddingTop="20dp">
    <ImageView
        android:id="@+id/thumbnail_image"
        android:layout_width="120dp"
        android:layout_height="99dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:text="IAS Prelims Power Pack"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:gravity="top"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/rupee_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_indian_rupee"
            android:layout_below="@+id/title"/>
        <TextView
            android:id="@+id/price"
            android:text="2000.00"
            android:layout_marginLeft="0dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/rupee_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/categories"
            android:layout_marginBottom="5dp"
            android:id="@+id/counts">

            <TextView
                android:id="@+id/total_exams"
                android:text="0 Exams"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_assignment_black_18dp"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/total_notes"
                android:text="0 Documents"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_book_black_18dp"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/total_exams"/>

        </LinearLayout>

        <TextView
            android:id="@+id/categories"
            android:drawableLeft="@drawable/ic_school_black_18dp"
            android:drawablePadding="5dp"
            android:text="AIIMS, AIPGMEE, NBE, PGI"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
